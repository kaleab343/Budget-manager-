<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="BGM"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BagetMamanger2">
        
        <!-- Simple Login Activity - Now the launcher activity -->
        <activity
            android:name=".SimpleLoginActivity"
            android:exported="true"
            android:theme="@style/Theme.BagetMamanger2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Original Login Activity - Keep as backup -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.BagetMamanger2" />
        
        <!-- Main Activity - Only accessible after login -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
            
        <activity
            android:name=".prereation"
            android:exported="false" />
    </application>

</manifest>